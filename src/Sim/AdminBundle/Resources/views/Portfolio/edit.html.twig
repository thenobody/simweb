{% extends 'SimAdminBundle::layout.html.twig' %}

{% block content %}
{{ parent() }}

<div class="page-header">
    <h1>Edit project {{ article.getTitle() }}</h1>
</div>

<div class="row-fluid">
    <form action="{{ path('sim_admin_portfolio_edit', { id : article.getId() } ) }}" class="form-horizontal" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        <!-- title -->
        <div class="control-group">
            {{ form_label(form.title, 'Title', { 'label_attr' : { 'class' : 'control-label' } }) }}
            <div class="controls">
                {{ form_widget(form.title, { 'attr' : { 'placeholder' : 'Title' } }) }}
            </div>
        </div>
        <!-- END title -->
        
        <!-- subtitle -->
        <div class="control-group">
            {{ form_label(form.subtitle, 'Subtitle', { 'label_attr' : { 'class' : 'control-label' } }) }}
            <div class="controls">
                {{ form_widget(form.subtitle, { 'attr' : { 'placeholder' : 'Subtitle' } }) }}
            </div>
        </div>
        <!-- END subtitle -->
        
        <!-- content -->
        <div class="control-group">
            {{ form_label(form.content, 'Content', { 'label_attr' : { 'class' : 'control-label' } }) }}
            <div class="controls">
                {{ form_widget(form.content, { 'attr' : { 'placeholder' : 'Content' } }) }}
            </div>
        </div>
        <!-- END content -->
        
        <!-- visible -->
        <div class="control-group">
            {{ form_label(form.visible, 'Visible', { 'label_attr' : { 'class' : 'control-label' } }) }}
            <div class="controls">
                {{ form_widget(form.visible) }}
            </div>
        </div>
        <!-- END visible -->
        
        {{ form_rest(form) }}

        <input type="submit" class="btn" />
    </form>
</div>

{% endblock %} {# content #}
